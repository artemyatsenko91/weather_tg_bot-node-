{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "semi": "warn",
        "no-var": "error",
        "prefer-const": "error",
        "no-console": "error",
        "prefer-destructuring": "off",
        "max-len": ["warn", 150, { "ignoreUrls": true }]
    },
    "root": true
}
